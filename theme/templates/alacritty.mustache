# {{scheme-name}} - Alacritty
# {{scheme-author}}

[colors.primary]
background = '0x{{base00-hex}}'
foreground = '0x{{base05-hex}}'

# If `custom_cursor_colors` is `true`.
[colors.cursor]
text = '0x{{base00-hex}}'
cursor = '0x{{base05-hex}}'

[colors.normal]
black = '0x{{base00-hex}}'
red = '0x{{base08-hex}}'
green = '0x{{base0B-hex}}'
yellow = '0x{{base0A-hex}}'
blue = '0x{{base0D-hex}}'
magenta = '0x{{base0E-hex}}'
cyan = '0x{{base0C-hex}}'
white = '0x{{base05-hex}}'

[colors.bright]
black = '0x{{base03-hex}}'
red = '0x{{base08-hex}}'
green = '0x{{base0B-hex}}'
yellow = '0x{{base0A-hex}}'
blue = '0x{{base0D-hex}}'
magenta = '0x{{base0E-hex}}'
cyan = '0x{{base0C-hex}}'
white = '0x{{base07-hex}}'

# Additional Base16 colors for 256 colorspace.
# https://github.com/chriskempson/base16-shell

