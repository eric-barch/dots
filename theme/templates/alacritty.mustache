index = 16
color = "0x{{base09-hex}}"

[[colors.indexed_colors]]
index = 17
color = "0x{{base0F-hex}}"

[[colors.indexed_colors]]
index = 18
color = "0x{{base01-hex}}"

[[colors.indexed_colors]]
index = 19
color = "0x{{base02-hex}}"

[[colors.indexed_colors]]
index = 20
color = "0x{{base04-hex}}"

[[colors.indexed_colors]]
