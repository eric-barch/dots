[alias]
  co = checkout

  f = fetch
  p = pull
  pu = push

  a = add

  c = commit
  cv = commit -v
  ca = commit --amend
  cane = commit --amend --no-edit

  s = status
  ss = status -s
  sh = show
  l = log
  lp = log --patch
  l1 = log --oneline

  b = branch

  d = diff
  ds = diff --staged
  dh = diff HEAD

  r = rebase
  m = merge
  cp = cherry-pick

[core]
  excludesfile = ~/.config/git/gitignore
  editor = nvim

[diff]
  tool = nvimdiff

[init]
  defaultBranch = main

[merge]
  tool = nvimdiff2

